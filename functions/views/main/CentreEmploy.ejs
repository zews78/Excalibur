    <div class="container">
      <div class="a">
        <h3>
          <%=ticketObject.centre_name%>
        </h3>
        <p>
          <%=ticketObject.centre_location%>
        </p>
        <p><b>Total Custumers today:<span style="font-size: 1.5em;">
              <%=Tickets.length%>
            </span></b></p>
        <br>
        <p><b>Current Token:<span style="font-size: 1.5em;">
              <%=ticketObject.token%>
            </span></b></p>
        <br>
        <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col">SNo.</th>
              <th scope="col">Name</th>
              <th scope="col">Booking Id</th>
              <th scope="col">Time</th>
            </tr>
          </thead>
          <tbody>
            <%function leftFillNum(num, targetLength) { return num.toString().padStart(targetLength, 0); }%>
              <%for(var i=0,j=0; i< Tickets.length, j< RegUsers.length; i++, j++){
                if(Tickets[i].id==ticketObject.token){%>
                <tr style="font-size: 22px;
        color: yellowgreen;">
                  <th scope="row">
                    <%=leftFillNum(i+1, 2)%>
                  </th>
                  <td>
                    <%=RegUsers[j]%>
                  </td>
                  <td>
                    <%=Tickets[i].id%>
                  </td>
                  <td><b>Now</b></td>
                </tr>
                <%}else{%>
                  <tr>
                    <th scope="row">
                      <%=leftFillNum(i+1, 2)%>
                    </th>
                    <td>
                      <%=RegUsers[j]%>
                    </td>
                    <td>
                      <%=Tickets[i].id%>
                    </td>
                    <td><b>@Exp Time</b></td>
                  </tr>
                  <%}%>
                    <%}%>
          </tbody>
        </table>

        <p><button id="cancelButton" type="button" class="cancelbtn" onclick="stopqueue('<%=ticketObject.token%>')">Stop Queue</button></p>
        <p><button id="restartButton" type="button" class="cancelbtn" onclick="restartqueue('<%=ticketObject.token%>')">Restart Queue</button>
        </p>
      </div>
      <script>

      
      


        const canbtn = document.getElementById('cancelButton');
        const resbtn = document.getElementById('restartButton');



        resbtn.setAttribute('disabled', 'disabled');


        function stopqueue(ticketId) {
          console.log("running", ticketId);

          canbtn.setAttribute('disabled', 'disabled');

          fetch("/stopQueue", {
            // Adding method type
            method: "POST",
            // Adding body or contents to send
            body: JSON.stringify({
              // Now you can use the jsVariable in your JavaScript code
              ticketId: ticketId,
            }),
            // Adding headers to the request
            headers: {
              "Content-type": "application/json; charset=UTF-8"
            }
          })
            .then(response => response.json())
            .then((data) => {
              resbtn.removeAttribute('disabled');
            })
        }

        function restartqueue(ticketId) {
          console.log("running", ticketId);

          resbtn.setAttribute('disabled', 'disabled');

          fetch("/restartQueue", {
            // Adding method type
            method: "POST",
            // Adding body or contents to send
            body: JSON.stringify({
              ticketId: ticketId,
            }),
            // Adding headers to the request
            headers: {
              "Content-type": "application/json; charset=UTF-8"
            }
          })
            .then(response => response.json())
            .then((data) => {
              canbtn.removeAttribute('disabled');
            })
        }

      </script>
